#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., ......, ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

###
# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias notes="cd ~/notes"
alias org="cd ~/org"

